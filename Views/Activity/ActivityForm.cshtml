<partial name="NavPartial"/>
<div class = "container">
    <h1>Plan Your Wedding</h1>
    <form asp-action = 'CreateActivity' asp-controller="Activity" method = "post">
        @model Activity
        <div class="form-group">
                <label asp-for="Name">Activity Name:</label>
                <span asp-validation-for="Name"></span>
                <input type= "text" class="form-control" name="Name" asp-for="Name" placeholder="Enter name">
            </div>
            <div class="form-group">
                <label asp-for="Date">Date:</label>
                <span asp-validation-for="Date"></span>
                <input type = "date" class="form-control" name="Date" asp-for="Date">
            </div>
        <div class="form-group">
            <label asp-for="Time">Time:</label>
            <span asp-validation-for="Time"></span>
            <input type = "time" class="form-control" name="Time" asp-for="Time">
        </div>
        <div class="form-group">
            <label asp-for="Duration">Duration:</label>
            <span asp-validation-for="Duration"></span>
            <input type= "number" class="form-control" name="Duration" asp-for="Duration" placeholder="Enter Duration">
        </div>
        <div class="form-group">
            <label asp-for="DurationType">Duration Unit Of Time:</label>
            <select asp-for="DurationType" class="form-control">
                <option value = "Hours">Hours</option>
                <option value = "Minutes">Minutes</option>
                <option value = "Days">Days</option>
            </select> 
            <span asp-validation-for="DurationType"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <span asp-validation-for="Description"></span>
            <textarea type= "text" row = "5" class="form-control" name="Description" asp-for="Description" placeholder="Enter description"></textarea>
        </div> 
        <input class="btn btn-primary" type = 'submit' value = 'Submit'  />
    </form>
</div>