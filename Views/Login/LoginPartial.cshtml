
    <form asp-action = 'LoginUser' asp-controller="Login" method = "post">
        @model LoginUser
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <span asp-validation-for="Email"></span>
            <input type= "text" class="form-control" name="Email" asp-for="Email" placeholder="Email">
        </div> 
        <div class="form-group">
            <label asp-for="Password">Password:</label>
            <span asp-validation-for="Password"></span>
            <input type= "password" class="form-control" name="Password" asp-for="Password" placeholder="Password">
        </div> 
        <input type="submit" value="Login">
    </form>